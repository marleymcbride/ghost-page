<style>
.landing-page {
    background: var(--bg-primary) !important;
    color: var(--text-primary) !important;
    min-height: 100vh;
}

/* Hero Section */
.hero-section {
    padding: 120px 0 160px;
    background: var(--bg-primary) !important;
    border-bottom: 1px solid var(--border-color);
    text-align: center;
}

.hero-content {
    max-width: 900px;
    margin: 0 auto;
}

.hero-title {
    font-size: 5rem !important;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 36px;
    color: var(--text-primary) !important;
}

.hero-accent {
    color: var(--accent-red) !important;
}

.hero-subtitle {
    font-size: 2rem !important;
    line-height: 1.5;
    color: var(--text-secondary) !important;
    margin-bottom: 60px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.email-signup {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    justify-content: center;
}

.email-input {
    flex: 1;
    padding: 20px 24px;
    border: 2px solid var(--border-color);
    border-radius: 12px;
    background: var(--bg-secondary) !important;
    color: var(--text-primary) !important;
    font-size: 1.2rem;
    max-width: 350px;
}

.email-input:focus {
    outline: none;
    border-color: var(--accent-red);
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
}

.email-input::placeholder {
    color: var(--text-muted) !important;
}

.cta-button {
    padding: 20px 40px;
    background: var(--accent-red) !important;
    color: white !important;
    border: none;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.2rem;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
}

.cta-button:hover {
    background: #b91c1c !important;
    transform: translateY(-2px);
    box-shadow: 0 12px 30px rgba(220, 38, 38, 0.4);
}

.cta-subtext {
    color: var(--text-muted) !important;
    font-size: 1.1rem;
    text-align: center;
}

/* Anti-Stack Section */
.anti-stack-section {
    padding: 140px 0;
    background: var(--bg-secondary) !important;
    border-bottom: 1px solid var(--border-color);
}

.section-header {
    text-align: center;
    margin-bottom: 80px;
}

.section-header h2 {
    font-size: 3.5rem !important;
    font-weight: 700;
    margin-bottom: 24px;
    color: var(--text-primary) !important;
}

.section-subtitle {
    font-size: 1.6rem !important;
    color: var(--text-secondary) !important;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.5;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 50px;
    margin-bottom: 80px;
}

.feature-card {
    background: var(--bg-tertiary) !important;
    padding: 50px 40px;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    text-align: center;
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
}

.feature-icon {
    font-size: 3.5rem;
    margin-bottom: 24px;
}

.feature-card h3 {
    font-size: 2rem !important;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--text-primary) !important;
}

.feature-card p {
    color: var(--text-secondary) !important;
    line-height: 1.6;
    font-size: 1.2rem !important;
}

/* Work Section */
.work-section {
    padding: 140px 0;
    background: var(--bg-primary) !important;
    border-bottom: 1px solid var(--border-color);
}

.work-content {
    display: grid;
