}

/* Content Section */
.content-section {
    padding: 140px 0;
    background: var(--bg-secondary) !important;
}

.content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 50px;
    margin-bottom: 80px;
}

.content-card {
    background: var(--bg-tertiary) !important;
    border: 1px solid var(--border-color);
    border-radius: 16px;
