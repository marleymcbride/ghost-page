    transition: all 0.3s ease;
}

.content-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
}

.content-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
}

.content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.content-tag {
    position: absolute;
    top: 20px;
    left: 20px;
    background: var(--accent-red) !important;
    color: white !important;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
}

.content-text {
    padding: 40px;
}

.content-text h3 {
    margin-bottom: 20px;
}

.content-text h3 a {
    color: var(--text-primary) !important;
    text-decoration: none;
    font-size: 1.6rem !important;
    font-weight: 600;
}

.content-text h3 a:hover {
    color: var(--accent-red) !important;
}

.content-text p {
    color: var(--text-secondary) !important;
    line-height: 1.6;
    margin-bottom: 24px;
    font-size: 1.1rem !important;
}

.content-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.read-time {
    font-size: 1rem;
    color: var(--text-muted) !important;
}

.read-more {
    color: var(--accent-red) !important;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
}

.read-more:hover {
    color: #b91c1c !important;
}

/* CTAs */
.cta-center {
    text-align: center;
}

.secondary-cta {
    display: inline-block;
    padding: 18px 36px;
    background: transparent;
    color: var(--text-primary) !important;
    border: 2px solid var(--border-color);
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.2s ease;
    font-size: 1.1rem;
}

.secondary-cta:hover {
    background: var(--bg-tertiary) !important;
    border-color: var(--accent-red) !important;
    color: var(--text-primary) !important;
    text-decoration: none;
    transform: translateY(-2px);
}

/* Responsive */
@media (max-width: 768px) {
    .hero-title { font-size: 3.5rem !important; }
    .hero-subtitle { font-size: 1.4rem !important; }
    .section-header h2 { font-size: 2.5rem !important; }
    .work-text h2 { font-size: 2.2rem !important; }
    .email-signup { flex-direction: column; align-items: center; }
    .work-content { grid-template-columns: 1fr; gap: 60px; }
    .content-grid { grid-template-columns: 1fr; }
    .features-grid { grid-template-columns: 1fr; }
    .hero-section { padding: 80px 0 100px; }
    .anti-stack-section, .work-section, .content-section { padding: 80px 0; }
}
</style>

<script>
function signupHero() {
    const email = document.getElementById('hero-email').value;
    if (!email) {
        alert('Please enter your email address');
        return;
    }

    // Open the auth modal for signup
    const modal = document.getElementById('auth-modal');
    if (modal) {
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }
}
</script>
