{{!< default}}

<div class="blog-page">
    {{!-- Blog Header --}}
    <header class="blog-header gh-outer">
        <div class="gh-inner">
            <h1 class="blog-title">All Guides</h1>
            <p class="blog-subtitle">No-bullshit content for high-performers who want to feel incredible</p>
        </div>
    </header>

    {{!-- Featured Post --}}
    {{#get "posts" limit="1" filter="featured:true" as |featured_posts|}}
        {{#if featured_posts}}
            <section class="featured-section gh-outer">
                <div class="gh-inner">
                    <h2 class="featured-label">Featured Guide</h2>
                    {{#foreach featured_posts}}
                        <article class="featured-post">
                            {{#if feature_image}}
                                <div class="featured-image">
                                    <a href="{{url}}">
                                        <img src="{{feature_image}}" alt="{{title}}">
                                    </a>
                                    {{#primary_tag}}
                                        <span class="featured-tag">{{name}}</span>
                                    {{/primary_tag}}
                                </div>
                            {{/if}}

                            <div class="featured-content">
                                <h3 class="featured-title">
                                    <a href="{{url}}">{{title}}</a>
                                </h3>
                                <p class="featured-excerpt">{{excerpt}}</p>
                                <div class="featured-meta">
                                    <span class="reading-time">{{reading_time}}</span>
                                    <time class="post-date">{{date format="MMMM D, YYYY"}}</time>
                                    <a href="{{url}}" class="featured-read">Read Full Guide â†’</a>
                                </div>
                            </div>
                        </article>
                    {{/foreach}}
                </div>
            </section>
        {{/if}}
    {{/get}}

    {{!-- All Posts Grid --}}
    <main class="blog-main gh-outer">
        <div class="gh-inner">
            <div class="posts-header">
                <h2>All Guides</h2>
            </div>

            {{#if posts}}
                <div class="post-feed">
                    {{#foreach posts}}
                        {{!-- Filter out posts with #DontShowOnHome tag --}}
                        {{^has tag="#DontShowOnHome"}}
                            {{> "loop"}}
                        {{/has}}
                    {{/foreach}}
                </div>

                {{pagination}}
            {{else}}
                <div class="no-posts">
                    <h3>No posts yet</h3>
                    <p>Check back soon for content, or create some posts in your Ghost admin panel.</p>
                </div>
            {{/if}}
        </div>
    </main>
</div>

<style>
.blog-page {
    background: var(--bg-primary) !important;
    color: var(--text-primary) !important;
    min-height: 100vh;
}

/* Blog Header */
.blog-header {
    padding: 80px 0;
    background: var(--bg-secondary) !important;
    border-bottom: 1px solid var(--border-color);
    text-align: center;
}

.blog-title {
    font-size: 3.5rem !important;
    font-weight: 800;
    margin-bottom: 20px;
    color: var(--text-primary) !important;
}

.blog-subtitle {
    font-size: 1.4rem !important;
    color: var(--text-secondary) !important;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.5;
}

/* Featured Section */
.featured-section {
    padding: 80px 0;
    background: var(--bg-primary) !important;
    border-bottom: 1px solid var(--border-color);
}

.featured-label {
    font-size: 1.1rem !important;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--accent-red) !important;
    margin-bottom: 30px;
}

.featured-post {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
}

.featured-image {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 16/10;
}

.featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.featured-image:hover img {
    transform: scale(1.05);
}

.featured-tag {
    position: absolute;
    top: 24px;
    left: 24px;
    background: var(--accent-red) !important;
    color: white !important;
    padding: 10px 20px;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
}

.featured-title {
    font-size: 2.8rem !important;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 24px;
}

.featured-title a {
    color: var(--text-primary) !important;
    text-decoration: none;
}

.featured-title a:hover {
    color: var(--accent-red) !important;
}

.featured-excerpt {
    font-size: 1.3rem !important;
    line-height: 1.6;
    color: var(--text-secondary) !important;
    margin-bottom: 30px;
}

.featured-meta {
    display: flex;
    align-items: center;
    gap: 24px;
    font-size: 1rem;
}

.reading-time, .post-date {
    color: var(--text-muted) !important;
}

.featured-read {
    color: var(--accent-red) !important;
    text-decoration: none;
    font-weight: 600;
    margin-left: auto;
}

.featured-read:hover {
    color: #b91c1c !important;
}

/* Posts Section */
.blog-main {
    padding: 80px 0 120px;
}

.posts-header {
    margin-bottom: 50px;
}

.posts-header h2 {
    font-size: 2.2rem !important;
    font-weight: 700;
    color: var(--text-primary) !important;
}

/* Enhanced Post Cards */
.post-feed {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 50px;
}

/* No Posts Fallback */
.no-posts {
    text-align: center;
    padding: 80px 0;
}

.no-posts h3 {
    font-size: 2rem !important;
    color: var(--text-primary) !important;
    margin-bottom: 16px;
}

.no-posts p {
    font-size: 1.2rem !important;
    color: var(--text-secondary) !important;
}

/* Responsive */
@media (max-width: 768px) {
    .blog-title { font-size: 2.5rem !important; }
    .blog-subtitle { font-size: 1.1rem !important; }
    .featured-post { grid-template-columns: 1fr; gap: 40px; }
    .featured-title { font-size: 2rem !important; }
    .featured-excerpt { font-size: 1.1rem !important; }
    .post-feed { grid-template-columns: 1fr; }
    .blog-header { padding: 60px 0; }
    .featured-section, .blog-main { padding: 60px 0; }
}
</style>
